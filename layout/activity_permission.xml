<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:layout_scrollFlags="scroll|enterAlways">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Lead_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:paddingRight="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
      </FrameLayout>
    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

  <Switch
        android:id="@+id/administ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrator"
        android:layout_margin="10dp"
        android:checked="false"/>
  <Switch
      android:id="@+id/usageAccess"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="Demo Usage Access"/>
  <Switch
      android:id="@+id/homeLauncher"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Home Launcher"
      android:layout_margin="10dp"
      android:checked="false"/>
    <Switch
        android:id="@+id/autostart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Start"
        android:layout_margin="10dp"
        android:checked="false"/>

  <Switch
        android:id="@+id/displaaypopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Popup"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:checked="false"/>
  <Switch
        android:id="@+id/gpsswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:checked="false"/>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:id="@+id/accessbtncard"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      app:cardCornerRadius="@dimen/spacing_medium"
      app:cardElevation="@dimen/spacing_medium"
      app:cardBackgroundColor="@color/colorPrimary"
      app:cardUseCompatPadding="true"
      android:layout_margin="10dp">
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_xmiddle"
        android:textStyle="bold" />
  </android.support.v7.widget.CardView>

</LinearLayout>
</LinearLayout>
</ScrollView>
